<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ac.CadDirecaoAc">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/top_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:padding="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Questionário perfil de direção"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Segurança"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="40dp"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Quão importante são os recursos de segurança em um veículo para você?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                     />

                <Spinner
                    android:id="@+id/spSeg1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:dropDownVerticalOffset="50dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Quão relevante é a sua sensação de segurança ao dirigir um veículo para você?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/spSeg2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:dropDownVerticalOffset="50dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Considerando a segurança, qual é a importância dos recursos que aumentam a estabilidade do veículo?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/spSeg3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:dropDownVerticalOffset="50dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conforto"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Quão importante é o conforto geral de um veículo para você?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/spConf1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:dropDownVerticalOffset="50dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Quão relevante é a experiência de condução suave e tranquila de um veículo para sua comodidade?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/spConf2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:dropDownVerticalOffset="50dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Quão importante é o espaço interno e a capacidade de carga de um veículo para você?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/spConf3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:dropDownVerticalOffset="50dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Economia"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Quão importante é a economia geral de um veículo para você?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/spEco1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:dropDownVerticalOffset="50dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Considerando a economia, qual é a importância de manter baixos custos de propriedade e manutenção?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/spEco2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:dropDownVerticalOffset="50dp"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Quão relevante é a escolha do tipo de combustível de um veículo para a economia? (ex.: gasolina, etanol, diesel, elétrico, híbrido)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <Spinner
                    android:id="@+id/spEco3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:padding="12dp"
                    android:textColor="#707070"
                    android:dropDownVerticalOffset="50dp"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCadEndereco"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:text="Próximo"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>